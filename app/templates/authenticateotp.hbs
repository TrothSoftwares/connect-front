<section id="intro" class="intro-section">
        <h1>ConnectAnywhere</h1>
        <div class="container" id="wrap">
          <div class="row">
            <div class="col-md-3">

            </div>
            <div class="col-md-6">
              <div class="well borderr">

                <h3>Confirm Your Mobile No</h3>
                <hr style="margin-top:0px;margin-bottom:5px; ">

                <p>Mobile No : <b>{{phone}}</b>  </p>

                {{#bs-button active=notCollapsed onClick=(action "toggle")  class="btn btn-default btn-sm btn-success "   }}Send OTP{{/bs-button}}




                    {{#bs-collapse collapsed=collapsed}}
                      <br>

                      <p>
                        Enter the OTP Received
                      </p>
                <div class="input-group">

                    {{input type="text" value=otp  class="form-control input-sm" placeholder="Enter OTP"}}

                    <br>

                  <span class="input-group-btn">


                    <button type="text"  class="btn btn-default btn-sm btn-success" {{action 'authenticateotp'}}>Submit</button>

                  </span>
                </div>
                <br>
              <p>
                Not Received OTP yet?<a {{action 'resendotp'}}> Resend </a>
              </p>


    {{/bs-collapse}}


              </div>
            </div>

          </div>
  </div>

      </section>
