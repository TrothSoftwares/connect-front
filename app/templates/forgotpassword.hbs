<section id="intro" class="intro-section">
      <h1>ConnectAnywhere</h1>
      <div class="container" id="wrap">
        <div class="row">
          <div class="col-md-3">

          </div>
          <div class="col-md-6">
            <div class="well borderr">
              <h2 style="text-align:center">Reset your password</h2>
              <p>
                If you have forgotten your password please enter your Mobile Number here, and we will send you an OTP.
              </p>
              <div class="input-group">
                  {{input type="text" value=phone class="form-control input-sm" placeholder="Enter Your Mobile Number"}}<br>
                <span class="input-group-btn">
                  {{#bs-button active=notCollapsed onClick=(action "toggle")  class="btn btn-default btn-sm btn-success "   }}Send OTP{{/bs-button}}
                  <!-- <a class="btn btn-default btn-sm btn-success" data-toggle="collapse" data-target="#demo" type="button">Send OTP</a> -->
                </span>
              </div>


                  {{#bs-collapse collapsed=collapsed}}
                    <br>

                    <p>
                      Enter the OTP Received
                    </p>
              <div class="input-group">
                  {{input type="text"  value=otp class="form-control input-sm" placeholder="Enter OTP"}}<br>
                <span class="input-group-btn">
                  <button type="text"  class="btn btn-default btn-sm btn-success" {{action 'forgotauthenticateotp'}}>Submit</button>
                </span>
                <br>
              <p>
                Not Received OTP yet?<a {{action 'forgotresendotp'}}> Resend </a>
              </p>
              </div>
              {{/bs-collapse}}

          </div>
          <div class="col-md-3">

          </div>
        </div>
</div>
</div>
    </section>
